@page "/prioritytypes/edit/{id:int}"
@using TaskManager.BlazorUI.Contracts
@using TaskManager.BlazorUI.Models.WorkTaskPriorityTypes

<h3>Priority Type Details</h3>

<div class="row">
	<div class="col-md-4">

		@if(Model != null)
		{
		<EditForm Model="@Model" OnValidSubmit="EditPriorityType">
			<DataAnnotationsValidator />
			<ValidationSummary />
			
			<div class="form-group">
				<label class="control-label">Priority Type Name</label>
				<InputText id="prioritytypename" class="form-control" @bind-Value="@Model.Name"></InputText>
				<label class="control-label">Priority Type Weight</label>
				<InputText id="prioritytypename" class="form-control" @bind-Value="@WeightString"></InputText>
				<ValidationMessage For="@(() => Model.Name)" />
			</div>
			<div class="form-group">
				<input type="submit" value="Update" class="btn btn-outline-primary" />
				<input type="button" value="Cancel" class="btn btn-outline-primary" onclick="@GoBack" />
			</div>
		</EditForm>
		}
		else if (!string.IsNullOrEmpty(Message))
		{
			<div class="alert alert-danger">
				@Message
			</div>
		}
		else
		{
			<p>Loading...</p>
		}
	</div>
</div>


