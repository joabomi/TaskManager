@page "/prioritytypes/create"
@using TaskManager.BlazorUI.Contracts
@using TaskManager.BlazorUI.Models.WorkTaskPriorityTypes

<h3>Create New Work Task Priority Type</h3>

<div class="row">
	<div class="col-md-4">
		<EditForm Model="@Model" OnValidSubmit="CreateNewType">
			<DataAnnotationsValidator />
			<ValidationSummary />

			@if (!string.IsNullOrEmpty(Message))
			{
				<div class="alert alert-danger">
					@Message
				</div>
			}

			<div class="form-group">
				<label class="control-label">Priority Type Name</label>
				<InputText id="prioritytypename" class="form-control" @bind-Value="@Model.Name"></InputText>
				<label class="control-label">Priority Type Weight</label>
				<InputText id="prioritytypeweight" class="form-control" @bind-Value="@WeightString"></InputText>
				<ValidationMessage For="@(() => Model.Name)" />
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-outline-primary"  />
				<input type="button" value="Cancel" class="btn btn-outline-primary" onclick="@GoBack" />
			</div>
		</EditForm>
	</div>
</div>


