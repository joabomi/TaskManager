@page "/statustypes/create"
@using TaskManager.BlazorUI.Contracts
@using TaskManager.BlazorUI.Models.WorkTaskStatusTypes

@if (string.IsNullOrEmpty(Message) == false)
{
	<div class="alert alert-danger">
		@Message
	</div>
}
<AuthorizeView Context="authContext" Roles="Administrator">
	<Authorized>
		<h3>Create New Work Task Status Type</h3>
		<FormComponent ButtonText="Create" StatusType="statusType" OnValidSubmit="@CreateNewType" />
	</Authorized>
	<NotAuthorized>
		<div class="alert alert-danger">
			<p>You are not authorized to view this page.</p>
		</div>
	</NotAuthorized>
</AuthorizeView>

